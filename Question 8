        }

        .banner-container {
            width: 400px;
            padding: 150px;
            height: 200px;
            border: 2px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            position: relative;
            background-color: #578dbe;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .banner-content {
            display: none;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            justify-content: center;
            align-items: center;
            text-align: center;
